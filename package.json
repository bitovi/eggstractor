{
  "name": "eggstractor",
  "version": "1.0.0",
  "description": "Eggstractor",
  "main": "code.js",
  "scripts": {
    "build": "npm run generate-theme && npm run build:ui && npm run build:code && npm run build:html",
    "build:code": "vite build",
    "build:ui": "BUILD_UI=true vite build",
    "build:html": "node scripts/build-html.js",
    "dev": "npm run generate-theme && npm run build",
    "dev:ui": "BUILD_UI=true vite dev --host",
    "preview": "vite preview",
    "visualizer": "lite-server --baseDir=./visualizer",
    "prettier": "prettier --write .",
    "lint": "eslint --ext .ts,.tsx,.js,.jsx --ignore-pattern node_modules .",
    "lint:fix": "eslint --ext .ts,.tsx,.js,.jsx --ignore-pattern node_modules --fix .",
    "test": "jest",
    "test:snapshot": "jest --updateSnapshot",
    "test:watch": "jest --watch",
    "generate-theme": "node scripts/generate-theme.js"
  },
  "author": "Bitovi",
  "license": "MIT",
  "devDependencies": {
    "@figma/eslint-plugin-figma-plugins": "*",
    "@figma/plugin-typings": "^1.106.0",
    "@types/jest": "^29.0.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "@vitejs/plugin-react": "^4.3.4",
    "eslint": "^8.54.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "highlight.js": "^11.11.1",
    "jest": "^29.0.0",
    "lite-server": "^2.6.1",
    "prettier": "^3.5.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "sass-rem": "^4.0.0",
    "tailwindcss": "^3.4.17",
    "ts-jest": "^29.0.0",
    "typescript": "^5.3.2",
    "vite": "^6.0.7",
    "vite-plugin-singlefile": "^2.3.0"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:@figma/figma-plugins/recommended",
      "plugin:react/recommended",
      "plugin:react-hooks/recommended"
    ],
    "env": {
      "node": true,
      "es6": true,
      "browser": true
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": [
        "./tsconfig.json",
        "./ui.tsconfig.json"
      ]
    },
    "root": true,
    "rules": {
      "@typescript-eslint/no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_",
          "varsIgnorePattern": "^_",
          "caughtErrorsIgnorePattern": "^_"
        }
      ]
    }
  },
  "dependencies": {
    "culori": "^4.0.1",
    "highlight.js": "^11.8.0",
    "lodash.merge": "^4.6.2"
  }
}