{
  "root": true,
  "env": {
    "node": true,
    "es6": true
  },
  "ignorePatterns": ["node_modules/", "dist/", "build/"],
  "overrides": [
    {
      "files": ["**/*.ts", "**/*.tsx"],
      "parser": "@typescript-eslint/parser",
      "parserOptions": {
        "project": ["./tsconfig.json", "./ui.tsconfig.json"],
        "tsconfigRootDir": "."
      },
      "plugins": ["@typescript-eslint"],
      "extends": ["plugin:@typescript-eslint/recommended"]
    },
    {
      "files": ["**/*.js", "**/*.jsx"],
      "parser": "espree"
    }
  ]
}
